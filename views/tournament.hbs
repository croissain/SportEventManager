<!-- Tourmanents -->
<div class="container-fluid g-5">
    <h2 class="tournament-title mb-5">Giải đấu đang diễn ra</h2>
    <!-- Filter bar -->
    <div class="filter-tag d-flex flex-wrap align-items-baseline mb-3">
        <p class="label">Tìm kiếm giải đấu</p>

        <form action="" method="POST" class="search-bar">
            <input class="form-control search-box" type="search" placeholder="Tìm kiếm..." aria-label="Search" name="term">
            <!-- <button class="btn btn-outline-success" type="submit">Search</button> -->
        </form>
        
    </div>

    <!-- /Filter bar -->
    <div class="row">
        <div class="col-xl-3">
            <p class="label edu-stage-title">Cấp bậc giáo dục</>
                <a class="edu-stage-link" href="">
                    <div class="edu-stage">
                        <div class="edu-tag mb-3">
                            <div class="edu-tag__content">
                                <p class="label edu-tag__title">TIỂU HỌC</p>
                                {{!-- Từ 6-10 tuổi --}}
                            </div>
                        </div>
                    </div>
                </a>
                <a class="edu-stage-link" href="">
                    <div class="edu-stage">
                        <div class="edu-tag mb-3">
                            <!-- <span class="bg-deco"></span> -->
                            <div class="edu-tag__content">
                                <!-- <img src="" alt="" class="banner-img"> -->
                                <p class="label edu-tag__title">THCS</p>
                                {{!-- Từ 11-14 tuổi--}}
                            </div>
                        </div>
                    </div>
                </a>
                <a class="edu-stage-link" href="">
                    <div class="edu-stage">
                        <div class="edu-tag mb-3">
                            <!-- <span class="bg-deco"></span> -->
                            <div class="edu-tag__content">
                                <!-- <img src="" alt="" class="banner-img"> -->
                                <p class="label edu-tag__title">THPT</p>
                                {{!-- Từ 15-17 tuổi--}}
                            </div>
                        </div>
                    </div>
                </a>
                <a class="edu-stage-link" href="">
                    <div class="edu-stage">
                        <div class="edu-tag active mb-3">
                            <!-- <span class="bg-deco"></span> -->
                            <div class="edu-tag__content ">
                                <!-- <img src="" alt="" class="banner-img"> -->
                                <p class="label edu-tag__title">ĐẠI HỌC</p>
                                {{!-- Trên 18--}}
                            </div>
                        </div>
                    </div>
                </a>
                <a class="edu-stage-link" href="">
                    <div class="edu-stage">
                        <div class="edu-tag mb-3">
                            <!-- <span class="bg-deco"></span> -->
                            <div class="edu-tag__content">
                                <!-- <img src="" alt="" class="banner-img"> -->
                                <p class="label edu-tag__title">KHÁC</p>
                                {{!-- Trên 18--}}
                            </div>
                        </div>
                    </div>
                </a>
        </div>
        <!-- Tournaments -->

        <div class="col-xl-9">
            <div class="container-fluid">
                <div class="row">
                    <p class="label">Giải đấu bậc Đại học</p>
                    {{#each tournamentDetails}}
                    <div class="col-xl-4">
                        <div class="tournament-tag mb-3 d-flex flex-column flex-align-between">
                            <div class="flex-grow-1 tournament-tag__content">
                                <p class="label tournament-tag__title">Giải đấu {{tournament.TenGD}}</p>
                                <p class="title tournament-tag__duedate">Hạn đăng ký: {{tournament.HanCuoiDangKy}}</p>
                                <p class="title tournament-tag__startdate">Ngày hiện tại: 20/05/2021</p>
                                <p class="title tournament-tag__totalteams">Số đội tham gia: {{totalTeams}}</p>
                            </div>
                            <p class="label">Tiến độ giải đấu</p>
                            <div class="progress">
                                <div class="tournament-tag__progress progress-bar bg-secondary" style="width:70%">
                                </div>
                            </div>
                            <div class="tournament-tag__moreinfo d-flex flex-row-reverse">
                                <a class="mt-3" href="/tournament/{{tournament.MaGD}}">
                                    <p class="text-end">Các đội tham gia</p>
                                </a>
                                <a class="mt-3" href="/result">
                                    <p class="text-end me-4">Kết quả</p>
                                </a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Tourmanents -->
<script>
    n = new Date();
    d = n.getDate();
    m = n.getMonth() + 1;
    y = n.getFullYear();

    start_date = document.getElementsByClassName('title tournament-tag__startdate');

    for (let i =0;i<start_date.length;i++){
        start_date[i].innerHTML = `Ngày hiện tại: ${d}/${m}/${y}`;
    }
</script>